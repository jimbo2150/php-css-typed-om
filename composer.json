{
    "name": "jimbo2150/php-css-typed-om",
    "description": "PHP implementation of the CSS Typed Object Model (OM).",
    "type": "library",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "Jimbo2150\\PhpCssTypedOm\\": "src/"
        }
    },
	"autoload-dev": {
		"psr-4": {
			"Jimbo2150\\PhpCssTypedOm\\Tests\\": "tests/"
        }
	},
    "authors": [
        {
            "name": "Jim Robinson",
            "email": "jimbo2150@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
		"php": ">=8.4",
		"ext-intl": "*"
	},
	"scripts": {
		"test": "./vendor/bin/phpunit",
		"test-deprecated": "./vendor/bin/phpunit --display-deprecations",
		"test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-text",
		"test-coverage-html": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html ./.test/coverage",
		"post-install-cmd": [
			
		],
		"post-update-cmd": [
			
		]
	},
    "require-dev": {
        "phpunit/phpunit": "^11|^12",
        "friendsofphp/php-cs-fixer": "*"
    }
}
